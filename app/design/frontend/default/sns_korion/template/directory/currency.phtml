/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="currency-switcher">
    <select name="currency" title="<?php echo $this->__('Select Your Currency') ?>" onchange="setLocation(this.value)">
    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
        <option value="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"<?php if($_code==$this->getCurrentCurrencyCode()): ?> selected="selected"<?php endif; ?>>
            <?php //echo $_name ?><?php echo $_code ?>
        </option>
    <?php endforeach; ?>
    </select>
</div>
<script type="text/javascript" >
	$sns_jq(function($){
		// Transforming the form's Select control using jqTransform Plugin.
		$(".currency-switcher").jqTransform();
	});
    $sns_jq(document).ready(function($){
        $('.currency-switcher .jqTransformSelectWrapper').bind('click', function(event) {
            if($(this).hasClass('open')){
                $('.currency-switcher .jqTransformSelectWrapper').removeClass('open', '200');
            }else{
                $('.currency-switcher .jqTransformSelectWrapper').addClass('open');
            }
        });
        $('body').bind('click', function(event){
            if( !$(event.target).parents('.currency-switcher').length ){
                if($('.currency-switcher .jqTransformSelectWrapper').hasClass('open')){
                    $('.currency-switcher .jqTransformSelectWrapper').removeClass('open');
                }
            }
        });
    });
</script>
<?php endif; ?>
