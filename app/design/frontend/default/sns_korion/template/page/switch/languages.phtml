/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */

?>
<?php if(count($this->getStores())>1): ?>
<div class="language-switcher">
    <label><?php echo $this->__('Language:') ?> </label>
    <select id="select-language" onchange="window.location.href=this.value">
    <?php foreach ($this->getStores() as $_lang): ?>
        <?php $_selected = ($_lang->getId()==$this->getCurrentStoreId()) ? 'selected="selected"' : '' ?>
        <option value="<?php echo $_lang->getCurrentUrl() ?>" <?php echo $_selected ?>><?php echo $this->htmlEscape($_lang->getName()) ?></option>
    <?php endforeach; ?>
    </select>
</div>
<script type="text/javascript" >
	$sns_jq(function($){
		// Transforming the form's Select control using jqTransform Plugin.
		$(".language-switcher").jqTransform();
	});
    $sns_jq(document).ready(function($){
        $('.language-switcher .jqTransformSelectWrapper').bind('click', function(event) {
            if($(this).hasClass('open')){
                $('.language-switcher .jqTransformSelectWrapper').removeClass('open', '200');
            }else{
                $('.language-switcher .jqTransformSelectWrapper').addClass('open');
            }
        });
        $('body').bind('click', function(event){
            if( !$(event.target).parents('.language-switcher').length ){
                if($('.language-switcher .jqTransformSelectWrapper').hasClass('open')){
                    $('.language-switcher .jqTransformSelectWrapper').removeClass('open');
                }
            }
        });
    });
</script>
<?php endif; ?>